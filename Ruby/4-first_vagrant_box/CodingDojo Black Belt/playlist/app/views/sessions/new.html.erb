<div class="col-sm-4">
<h1>Create a new User</h1>

<% if flash[:notice] %>
  <% flash[:notice].each do |notice| %>
    <p style="color:red;"><%= notice %></p>
  <% end %>
<% end %>
<form class="form form-horizontal" action="/users/create" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <div class="form-group">
    <label class="form-label col-sm-3" for="first_name">First Name:</label>
    <div class="col-sm-9">
      <input class="form-control" type="text" name="user[first_name]" value="">
    </div>
  </div>
  <div class="form-group">
    <label class="form-label col-sm-3" for="last_name">Last Name:</label>
    <div class="col-sm-9">
      <input class="form-control" type="text" name="user[last_name]" value="">
    </div>
  </div>
  <div class="form-group">
    <label class="form-label col-sm-3" for="email">Email:</label>
    <div class="col-sm-9">
      <input class="form-control" type="text" name="user[email]" value="">
    </div>
  </div>
  <div class="form-group">
    <label class="form-label col-sm-3" for="password">Password:</label>
    <div class="col-sm-9">
      <input class="form-control" type="password" name="user[password]" value="">
    </div>
  </div>
  <div class="form-group">
    <label class="form-label col-sm-3" for="password_confirmation">Password Confirmation:</label>
    <div class="col-sm-9">
      <input class="form-control" type="password" name="user[password_confirmation]" value="">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-3 col-sm-offset-9">
      <input class="btn btn-primary" type="submit" name="submit" value="Register">
    </div>
  </div>
</form>

</div>

<div class="col-sm-4 col-sm-offset-1">
<h1>Existing User Login</h1>
<form class="form-horizontal" action="/sessions/login" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
  <div class="form-group row">
    <% if flash[:email_error] %>
      <p style="color:red;"><%= flash[:email_error]%></p></br>
    <% end %>
    <label class="col-sm-3 col-form-label" for="email">Email:</label>
    <div class="col-sm-9">
      <input class="form-control" type="text" name="user[email]" value=""></br>
    </div>
  </div>
  <div class="form-group row">
  <% if flash[:password_error] %>
    <p><%= flash[:password_error]%></p></br>
  <% end %>
  <label class="col-sm-3 col-form-label" for="password">Password:</label>
  <div class="col-sm-9">
    <input class="form-control" type="password" name="user[password]" value=""></br>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-3 col-sm-offset-9">
    <input class="btn btn-primary" type="submit" name="submit" value="Login">
  </div>
</div>
</form>

</div>
