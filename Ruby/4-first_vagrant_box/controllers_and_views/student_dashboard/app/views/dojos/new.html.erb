<div class="container">
  <h2>New Dojo</h2>

  <% if flash[:errors] %>
  	<% flash[:errors].each do |error| %>
    <ul style="color:red">
      <li><%= error %></li>
    </ul>
  	<% end %>
  <% end %>

  <form class="form-horizontal" action="/dojos" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <div class="form-group">
      <label class="control-label col-sm-2" for="branch">Branch:</label>
      <div class="col-sm-10">
        <input type="branch" class="form-control" id="branch" placeholder="Enter dojo branch name" name="dojo[branch]">
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="street">Street:</label>
      <div class="col-sm-10">
        <input type="branch" class="form-control" id="street" placeholder="Enter street name" name="dojo[street]">
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="city">City:</label>
      <div class="col-sm-10">
        <input type="branch" class="form-control" id="city" placeholder="Enter city name" name="dojo[city]">
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="state">State:</label>
      <div class="col-sm-10">
        <input type="branch" class="form-control" id="state" placeholder="Enter state name" name="dojo[state]">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Create</button>
      </div>
    </div>
  </form>
  <a href="/dojos" class="col-sm-offset-2 col-sm-10"><button type="button" name="button">Go Back</button></a>
</div>
