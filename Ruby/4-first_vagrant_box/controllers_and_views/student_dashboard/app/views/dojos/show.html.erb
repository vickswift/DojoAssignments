<div class="container">
  <div class="row">

    <h2><%= @dojo.branch %></h2>  <a href="/dojos/<%= @dojo.id %>/edit"><button type="button" name="button">Edit</button></a>

    <p><b>Street:</b><%=@dojo.street%></p>
    <p><b>City:</b><%=@dojo.city%></p>
    <p><b>State:</b><%=@dojo.state%></p>

  </div>

  <div class="row">

    <h1>Student Roster</h1>

    <% if flash[:notice] %>
    	<p><%= flash[:notice] %></p>
    <% end %>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
        <tr>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.email %></td>
          <td>
            <a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>'>Show</a> |
            <a href="/dojos/<%=@dojo.id%>/students/<%=student.id%>/edit"> Edit</a> |
            <a href="/dojos/<%=@dojo.id%>/students/<%=student.id%>" data-method="delete"> Delete</a>
          </td>

        </tr>
        <% end %>

      </tbody>
    </table>
  </div>

  <a href="/dojos"><button type="button" name="button">Home</button></a> |
  <a href="/dojos/<%= @dojo.id %>/students/new"><button type="button" name="button">Add New Student</button></a>



</div>
